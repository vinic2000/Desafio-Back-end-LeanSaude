generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  full_name String
  cpf       String   @unique
  email     String   @unique
  password  String
  type_user String
  Conta     Account?
}

model Account {
  id      String @id @default(uuid())
  balance Float
  user    User   @relation(fields: [userId], references: [id])
  userId  String @unique
}

model log {
  id     String   @id @default(uuid())
  payer  String
  payee  String
  action String
  value  Float
  date   DateTime @default(now())
  error  String
}
